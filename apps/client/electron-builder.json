{
	"appId": "com.backupr.app",
	"productName": "Backupr",
	"electronVersion": "22.3.27",
	"directories": {
		"buildResources": "build",
		"output": "out"
	},
	"files": ["dist/**/*", "electron/**/*", "package.json", "build/**/*"],
	"asarUnpack": ["build/**/*"],
	"publish": {
		"provider": "github",
		"owner": "calirko",
		"repo": "backupr"
	},
	"extraResources": [
		{
			"from": "build/tray-icon.ico",
			"to": "tray-icon.ico"
		},
		{
			"from": "build/tray.png",
			"to": "tray.png"
		},
		{
			"from": "build/icon.ico",
			"to": "icon.ico"
		},
		{
			"from": "build/icon.icns",
			"to": "icon.icns"
		},
		{
			"from": "build/icon.png",
			"to": "icon.png"
		}
	],
	"mac": {
		"category": "public.app-category.utilities",
		"target": ["dmg", "zip"],
		"icon": "build/icon.icns"
	},
	"win": {
		"target": ["nsis", "portable"],
		"icon": "build/icon.ico"
	},
	"nsis": {
		"oneClick": false,
		"allowToChangeInstallationDirectory": true,
		"runAfterFinish": true
	},
	"linux": {
		"target": ["AppImage", "deb"],
		"category": "Utility"
	}
}
