{
	"appId": "com.backupr.app",
	"productName": "Backupr",
	"electronVersion": "22.3.27",
	"directories": {
		"buildResources": "src/public/icons",
		"output": "out"
	},
	"files": [
		"src/electron/**/*",
		"src/main.js",
		"package.json",
		"src/public/icons/**/*"
	],
	"asarUnpack": ["src/public/icons/**/*"],
	"publish": {
		"provider": "github",
		"owner": "calirko",
		"repo": "backupr"
	},
	"extraResources": [
		{
			"from": "src/public/icons/icon.ico",
			"to": "icons/icon.ico"
		},
		{
			"from": "src/public/icons/icon.icns",
			"to": "icons/icon.icns"
		},
		{
			"from": "src/public/icons/icon.png",
			"to": "icons/icon.png"
		}
	],
	"mac": {
		"category": "public.app-category.utilities",
		"target": ["dmg", "zip"],
		"icon": "src/public/icons/icon.icns"
	},
	"win": {
		"target": ["nsis", "portable"],
		"icon": "src/public/icons/icon.ico"
	},
	"nsis": {
		"oneClick": false,
		"allowToChangeInstallationDirectory": true,
		"runAfterFinish": true
	},
	"linux": {
		"target": ["AppImage", "deb"],
		"category": "Utility"
	}
}
